    "eslint-plugin-react-hooks": "^7.0.1",
    "fast-check": "^4.3.0",
    "happy-dom": "^20.0.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  }
